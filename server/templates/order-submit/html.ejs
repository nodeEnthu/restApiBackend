
<table style="width:100%;padding:6px;background:#ffffff;border:1px solid #d9dbe5;border-spacing:0;font-family:Helvetica,Arial,sans-serif">
    <tbody>
        <tr>
            <td style="padding:0">
                <table style="width:100%;background:#858a8d;border-spacing:0;font-family:Helvetica,Arial,sans-serif">
                    <tbody>
                        <tr>
                            <td style="padding:3px 0 3px 6px;color:#ffffff;font-size:15px;font-weight:bold;text-transform:uppercase"><%=orderType%><span class="il">order</span></td>
                            <td style="padding:3px 6px 3px 0;color:#dfe0e1;font-size:12px;text-align:right"><%=orderId%></td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td style="padding:0">
                <table style="width:100%;border-spacing:0;font-family:Helvetica,Arial,sans-serif">
                    <tbody>
                        <tr>
                            <td style="padding:10px 0;color:#686b6e;font-size:12px;border-bottom:1px solid #d9dbe5">From</td>
                            <td style="padding:10px 0;color:#2b2c2f;font-size:13px;text-align:right;border-bottom:1px solid #d9dbe5"><%=providerName%></td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr style="background:#858a8d">
            <td colspan="2" style="padding:3px 6px;color:#ffffff;font-size:15px;font-weight:bold"><span class="il">ORDER</span> INFO</td>
        </tr>
        <tr>
            <td colspan="2" style="padding:0">
                <table style="width:100%;font-size:13px;border-spacing:0;font-family:Helvetica,Arial,sans-serif">
                    <tbody>
                        <tr style="color:#858a8f;font-size:10px;font-weight:bold">
                            <th colspan="2" style="padding:10px 0 0;text-align:left">Item</th>
                            <th style="width:25px;padding:10px 0 0;text-align:center">Qty</th>
                            <th style="width:40px;padding:10px 0 0;text-align:right">Price</th>
                        </tr>
                        <%for(var key in itemsCheckedOut){
                            if(itemsCheckedOut.hasOwnProperty(key)){
                            var itemCheckedOut =  itemsCheckedOut[key];
                        %>
                            <tr>
                                <td style="width:63px;padding:10px 8px 10px 0;border-bottom:1px dotted #d9dbe5">
                                    <p style="width:55px;height:55px;max-height:55px;min-height:55px;margin:0;border:1px solid #b8bdc5;overflow:hidden"><img src=<%=itemCheckedOut.img%> height="55" width="55" style="height:55px;width:55px">
                                    </p>
                                </td>
                                <td style="padding:10px 0;text-align:left;border-bottom:1px dotted #d9dbe5;vertical-align:top"><b style="color:#2b2c2f;font-size:15px"><%=itemCheckedOut.name%></b>
                                    <p style="margin:10px 0 0;color:#9b9e9f">
                                        <b>Additional Comments</b>: Regular
                                        <br>
                                        <b>Choice of Sauce</b>: Pizza
                                    </p>
                                </td>
                                <td style="padding:10px 0 10px 7px;color:#60636a;text-align:center;border-bottom:1px dotted #d9dbe5;vertical-align:top"><%=itemCheckedOut.quantity%>
                                </td>
                                <td style="padding:10px 0 10px 7px;color:#60636a;text-align:right;border-bottom:1px dotted #d9dbe5;vertical-align:top">$<%=itemCheckedOut.price%>
                                </td>
                            </tr>
                        <%  }
                        }%>
                        <tr> 
                            <td colspan="4" style="padding:11px 0">
                                <table style="width:100%;color:#60636a;font-size:13px;text-align:right;border-spacing:0;font-family:Helvetica,Arial,sans-serif">
                                    <tbody>
                                        <tr>
                                            <td style="padding:4px 0">Subtotal</td>
                                            <td style="width:20%;padding:4px 0">$<%=subTotal%></td>
                                        </tr>
                                        <tr>
                                            <td style="padding:4px 0">Tip</td>
                                            <td style="padding:4px 0">$<%=tip%></td>
                                        </tr>
                                        <tr>
                                            <td style="padding:4px 0">Tax</td>
                                            <td style="padding:4px 0">tbd (provider)</td>
                                        </tr>
                                        <%if(orderType==='delivery'){%>
                                            <tr>
                                                <td style="padding:4px 0">Delivery charge</td>
                                                <td style="padding:4px 0">tbd (provider)</td>
                                            </tr>
                                        <%}%>
                                        <tr>
                                            <td style="padding:4px 0">Pay by:</td>
                                            <td style="padding:4px 0"><%=modeOfPayment%></td>
                                        </tr>
                                        <tr>
                                            <td style="padding:4px 0">Total</td>
                                            <td style="padding:4px 0">$<%=subTotal + ' taxes'%></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>
